<div class="row-image">
    <div class="col-3">
    </div>
    
    <div class="col-6">
        <h1>画像投稿</h1>
            <%= form_for(@image) do |f| %>
                    <p>画像をアップロード
                        <%= f.attachment_field :image %>
                    </p>
                        　
                    <p>タイトル
                        <%= f.text_field :title %>
                    </p>
                    
                    <p>ジャンル
                        <%= f.select :genre, [["写真", "写真"], ["イラスト", "イラスト"], ["その他", "その他"]] %>
                    </p>
                    
                    <p>説明</p>
                        <%= f.text_area :information, size: "20x15", class: "form-control" %>
                        
                    <p>    
                        <%= f.submit '投稿する' %>
                    </p>
            <% end %>
    </div>
    
    <div class="col-3">
    </div>
</div>