<div class="row">
    <div class="col-3">
    </div>

    <div class="col6">
        <%= form_for @video do |f| %>
            <p>画像をアップロード
                <%= f.file_field :thumbnail %>
            </p>
            
            <p>タイトル
                <%= f.text_field :title %>
            </p>
            
            <p>ジャンル
                <%= f.select :genre, [["アニメーション", "アニメーション"], ["トーク・コント", "トーク・コント"], ["教育", "教育"], ["ミュージック", "ミュージック"], ["メイク・ファッション", "メイク・ファッション"], ["料理", "料理"], ["その他", "その他"]] %>
            </p>
            
            <p>動画をアップロード
                <%= f.file_field :video %>
            </p>
            
            <p>説明
                <%= f.text_area :information, size: "20x15", class: "form-control" %>
            </p>
            
            <p>
                <%= f.submit "投稿する" %>
            </p>
        <% end %>
    </div>
    
    <div class="col-3">
    </div>
</div>