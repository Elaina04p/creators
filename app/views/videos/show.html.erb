<div class="row-video">
    <div class="col-3">
    </div>
    
    <div class="col-6">
        <div class="video">
            <center>
                <p>
                    <%= @video.title %>
                </p>
                
                <p>
                    <%= video_tag @video.video_url.to_s,loop: true, controls: true, width: 600, id: "mv" %>
                </p>
                
                <p>ジャンル:
                    <%= @video.genre %>
                </p>
                
                <p>
                    <%= @video.user.account_name %>
                </p>
                
                <% if !Favorite.exists?(user_id:current_user.id,video_id:@video.id) %>
                    <%= link_to video_videos_favorite_path(@video),method: :post do  %>
                    <i class="far fa-star"></i>
                    <% end %>
                    
                    <% else %>
                    <%= link_to video_videos_favorite_path(@video),method: :delete do %>
                    <i class="fas fa-star"></i>
                    <% end %>
                <% end %>
                
                <p>説明
                    <%= @video.information %>
                </p>

            <% if current_user == @video.user %>
                <p>
                    <%= link_to "動画の編集", edit_video_path(@video.id) %>
                </p>
            <% end %>
            </center>
        </div>
    </div>
    
    <div class="col-3">
    </div>
</div>



