<div class="row-top">
    <div class="col-3">
    </div>
    
    <div class="col-6">
        <p>
            <%= link_to "画像投稿", new_image_path %>
        </p>
        
        <p>
            <%= link_to "画像一覧", images_path %>
        </p>
        
        <p>
            <%= link_to "動画投稿", new_video_path %> 
        </p>
        
        <p>
            <%= link_to "動画一覧", videos_path %>
    </div>
    
    <div class="col-3">
    </div>
    
    <div class="col-3">
    </div>
    
    <div class="col-6">
		<div>
		  <ul class="nav nav-tabs" role="tablist">
		    <li class="active" role="presentation">
		      <a aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">画像</a>
		    </li>
		    
		    <li role="presentation">
		      <a aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">動画</a>
		    </li>
		  </ul>
		  
		  <div class="tab-content">
			    <div class="tab-pane active" id="tab_a" role="tabpanel">
				      <% @images.each do |image| %>
					<div class="col-3">
							   <%= link_to image_path(image.id) do %>
							    <%= attachment_image_tag image,:image, height: '240', width: '240', class: "profile-thumb", fallback: "no_image.jpg" %>
							   <% end %>
					</div>
		        <% end %>
				</div>
			    
			    <div class="tab-pane" id="tab_b" role="tabpanel">
			      	<% @videos.each do |video| %>
		    		    <% if video.thumbnail.present? %>
		        		    <%= link_to video_path(video.id) do %>
		        		     <%= image_tag video.thumbnail.url, height: '240', width: '240' %>
		        		    <% end %>
		    		    <% end %>
		    		<% end %>
			    </div>
		   </div>
		</div>
	</div>
		<%= paginate @image_pages %>	
	<div class="col-3">
    </div>
</div>